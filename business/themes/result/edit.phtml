{include file="library/header.lbi"}
<body>
{include file="library/navbar.lbi"}
{include file="library/sidebar.lbi"}
<!-- content -->
<div id="content">
    <div class="content-title">
        <h5 class="pull-left">{$subTitle}</h5>
        <div class="clear"></div>
    </div>
    <div class="ad-main">
        <form id="ad-form" name="ad-form" method="post" onsubmit="return do_submit();">
            <fieldset>
                <p class="clear">
                    <label class="l-title">答案序列:</label>
                    <input class="text-input w300" type="text" value="{$answer_series_str}" disabled="disabled"/>
                </p>
                <p class="clear">
                    <label class="l-title">结论:</label>
                    <span class="error-input" id="conclusion-error"></span>
                </p>
                <p>
                    <textarea name="conclusion" rows="5" cols="93" placeholder="请填写答案评价" id="conclusion">{$result.conclusion}</textarea>
                </p>
                <p class="clear">
                    <label class="l-title">推荐产品编号:</label>
                    <input class="text-input w300" type="text" name="recommend_product" id="recommend_product" value="{$result.recommend_product}" placeholder="请输入推荐产品编号，多个产品使用英文逗号分隔"/>
                </p>
                <p>
                    <label class="l-title"></label>
                    <a class="btn btn-primary" id="submit-btn" href="javascript:;">
                        创建<img src="images/btn_loading.gif" class="btn-loading-img"/>
                    </a>&nbsp;
                    <input type="hidden" name="opera" value="add"/>
                    <a href="javascript:history.go(-1);" class="btn btn-primary">返回</a>
                </p>
            </fieldset>
        </form>
    </div>
</div>
<div id="mask"></div>

<script type="text/javascript">
    $(function() {
        $("#submit-btn").click(do_submit);
    });

    function do_submit() {
        var data = {
            opera: 'edit',
            conclusion: $('#conclusion').val().trim(),
            recommend_product: [],
            id: '{$result.id}'
        };

        var flag = true;
        var errors = {};

        if(data.conclusion === '') {
            errors.conclusion = '请填写答案评价';
            flag = false;
        } else {
            $('#conclusion-error').text('');
        }

        var recommend_product = $('#recommend_product').val().trim();
        recommend_product = recommend_product.split('，').join(',').split(',');
        data.recommend_product = recommend_product;

        if(flag) {
            //启用过渡效果
            $(".btn-loading-img").show();
            $("#submit-btn").addClass("btn-disabled");
            $("#mask").show();

            var url = "result.php";
            $.post(url, data, do_response, "json");
        } else {
            for(var key in errors) {
                $('#' + key + '-error').text(errors[key]);
            }
        }

        return flag;
    }

    function do_response(result) {
        //关闭过渡效果
        $(".btn-loading-img").hide();
        $("#submit-btn").removeClass("btn-disabled");
        $("#mask").hide();
        //处理返回结果
        if(result.error == 0) {
            alert(result.message);
            $("#available-time").hide();
            $("#show-image").attr("src", "../upload/image/no-image.png");
            window.history.back();
        } else {
            if(result.message !== "") {
                alert(result.message);
            }

            if(result.errors) {
                for(var id in result.errors) {
                    $("#"+id+"-error").text(result.errors[id]);
                }
            }
        }
    }
    /*----------------  Ajax end ---------------------*/
</script>
<!-- END content -->
{include file="library/footer.lbi"}
</body>
</html>